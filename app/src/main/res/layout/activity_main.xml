<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_rg"
        android:layout_marginBottom="-8dp" />

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/main_bottom_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <RadioButton
            android:id="@+id/main_meiniang_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/main_index_sel"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="首页"
            android:textSize="10dp" />

        <!--<RadioButton-->
            <!--android:id="@+id/main_classify_rb"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:button="@null"-->
            <!--android:drawableTop="@drawable/main_shopping_sel"-->
            <!--android:gravity="center"-->
            <!--android:paddingTop="4dp"-->
            <!--android:text="分类"-->
            <!--android:textSize="10dp" />-->


        <RadioButton
            android:id="@+id/main_discover_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_shopping_sel"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="购物车"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/main_me_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_mine_sel"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="我的"
            android:textSize="10dp" />

    </RadioGroup>



</RelativeLayout>
